#include <iostream>
#include <string>
#include <algorithm>
#include <io.h>
#include <fcntl.h>
#include <Windows.h>
#include <time.h>

//std::wcout << L" ┌ ─ ┐ │ └ ┘ ├ ┤ ┬ ┴ ┼ "<<std::endl;


using namespace std;
void something(int** array, const int rows, const int colomns)
{
	for (int i = 0; i < rows; i++)
	{
		for (int j = 0; j < colomns; j++)
		{
			array[i][j] = rand() % 20;
			cout << array[i][j] << ' ';

		}cout << endl;
	}



	bool isDeleteRow = false;
	int zerosCount = 0, rightEnd = colomns;
	int* rwsToDelete = new int[];


	for (int i = 0; i < rows; i++)
	{
		for (int j = 0; j < colomns; j++)
		{
			if (array[i][j] == 0)
			{
				zerosCount++;
				swap(array[i][j], array[i][rightEnd]);
				for (int i = 0; i < rightEnd - j; i++)
				{
					swap(array[i][j], array[i][j + 1]);
				}
			}


		}
	}
	int** additionalArray = new int* [4];
	for (int i = 0; i < 4; i++)
	{
		additionalArray[i] = new int[];
	}
}

int main()
{
	//_setmode(_fileno(stdout), _O_U16TEXT);
	srand(time(NULL));


	int** array = new int* [4];
	for (int i = 0; i < 4; i++)
	{
		array[i] = new int[5];
	}

	something(array, 4, 5);
	for (int i = 0; i < 4; i++)
	{
		for (int j = 0; j < 5; j++)
		{
			cout << array[i][j] << ' ';

		}cout << endl;
	}

	//for (int i = 0; i < 4; i++)
	//{
	//	delete[] array[i];
	//}
	//delete[] array;


	return 0;
} 
